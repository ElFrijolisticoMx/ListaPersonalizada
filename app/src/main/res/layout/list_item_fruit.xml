<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="410dp"
        android:layout_height="730dp"
        android:orientation="vertical"
        android:padding="8dp">

        <ImageView
            android:id="@+id/imageViewFruit"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/apple_image"
            android:contentDescription="@string/fruit_image_description"/>

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginStart="70dp"
        android:layout_weight="0.0"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="@string/fruit_name"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fruit_cost"
            android:textColor="@android:color/darker_gray"
            android:textSize="14dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageViewFruit"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/banana_image"
        android:contentDescription="@string/fruit_image_description"/>

    <LinearLayout
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:layout_weight="0"
        android:orientation="horizontal"
        android:layout_marginStart="70dp">

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fruit_name"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/textViewCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fruit_cost"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"/>

    </LinearLayout>

    </LinearLayout>


